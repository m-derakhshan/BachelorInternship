<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Transition
        android:id="@+id/my_transition"
        app:constraintSetEnd="@+id/ending_set"
        app:constraintSetStart="@+id/starting_set"
        app:duration="2000">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/content"
            app:touchAnchorSide="top" />


    </Transition>


    <ConstraintSet android:id="@+id/starting_set">

        <Constraint
            android:id="@+id/avatarHolder"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/infoHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@+id/profileBanner" />


        <Constraint
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoHolder" />


        <Constraint
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarHolder" />


        <Constraint
            android:id="@+id/expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <Constraint
            android:id="@+id/profileBanner"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="120dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="parent" />


    </ConstraintSet>


    <ConstraintSet android:id="@+id/ending_set">

        <Constraint
            android:scaleY="0.85"
            android:scaleX="0.85"
            android:id="@+id/avatarHolder"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarHolder" />


        <Constraint
            android:id="@+id/infoHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:alpha="0"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:layout_constraintTop_toBottomOf="@+id/profileBanner"
            app:pivotAnchor="parent" />


        <Constraint
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintRight_toLeftOf="@+id/avatarHolder"
            app:layout_constraintTop_toBottomOf="@+id/exit" />


        <Constraint
            android:layout_marginTop="10dp"
            android:id="@+id/expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintRight_toLeftOf="@+id/avatarHolder"
            app:layout_constraintTop_toBottomOf="@+id/name" />


        <Constraint
            android:id="@+id/profileBanner"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="120dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="parent" />


    </ConstraintSet>


</MotionScene>
