<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".main.news.AnalysisCategoryFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/technical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/analysis_category_ripple"
                android:gravity="center"
                android:padding="10dp"
                android:text="تکنیکال"
                android:textAppearance="@style/vazir_font"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fundamental"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/analysis_category_ripple"
                android:gravity="center"
                android:padding="10dp"
                android:text="بنیادی"
                android:textAppearance="@style/vazir_font"
                android:textColor="@color/gray"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/technical_line"
                android:layout_width="0dp"
                android:layout_height="2.5dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:orientation="vertical" />

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/fundamental_line"
                android:layout_width="0dp"
                android:layout_height="2.5dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:orientation="vertical" />

        </LinearLayout>


    </LinearLayout>
</layout>